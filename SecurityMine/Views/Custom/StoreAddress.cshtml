@using SecurityMine.Models
@model StoreAddressValidation

@{
    ViewBag.Title = "StoreAddress";
}

<h2>StoreAddress</h2>

@using (Html.BeginForm("AddAddress", "Custom", FormMethod.Post))
{
    @Html.LabelFor(a => a.AddressLine)
    <br />
    @Html.TextAreaFor(a => a.AddressLine)
    @Html.ValidationMessageFor(a => a.AddressLine)
    <br />


    @Html.LabelFor(a => a.District)
    <br />
    @Html.TextBoxFor(a => a.District)
    @Html.ValidationMessageFor(a => a.District)
    <br />

    @Html.LabelFor(a => a.City)
    <br />
    @Html.TextBoxFor(a => a.City)
    @Html.ValidationMessageFor(a => a.City)
    <br />

    @Html.LabelFor(a => a.PinCode)
    <br />
    @Html.TextBoxFor(a => a.PinCode)
    @Html.ValidationMessageFor(a => a.PinCode)
    <br />

    @Html.LabelFor(a => a.State)
    <br />
    @Html.TextBoxFor(a => a.State)
    @Html.ValidationMessageFor(a => a.State)
    <br />

    @Html.LabelFor(a => a.Country)
    <br />
    @Html.TextBoxFor(a => a.Country)
    @Html.ValidationMessageFor(a => a.Country)
    <br />

    <input type="submit" value="Update Info" class="btn btn-info" />

}

