@using SecurityMine.Models
@model StoreAddressValidation

@{
    ViewBag.Title = "StoreAddress";
}

<center>
    <h2><strong>Store/Update Address</strong></h2>

    @using (Html.BeginForm("AddAddress", "Custom", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.LabelFor(a => a.AddressLine, new { @class = "control-label" })
        <br />
        @Html.TextAreaFor(a => a.AddressLine, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.AddressLine, "", new { @class = "text-danger" })
        <br />


        @Html.LabelFor(a => a.District, new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(a => a.District, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.District, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(a => a.City, new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(a => a.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.City, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(a => a.PinCode, new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(a => a.PinCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.PinCode, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(a => a.State, new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(a => a.State, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.State, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(a => a.Country, new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(a => a.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Country, "", new { @class = "text-danger" })
        <br />

        <input type="submit" value="Update Info" class="btn btn-info" />

    }
</center>

